<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFD485"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="2"
    android:id="@+id/book"
    tools:context=".BookActivity"
    >

    <ImageButton
        android:id="@+id/gotoBook2"
        android:background="@android:color/transparent"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:src="@drawable/newpaper"
        />

    <TextView
        android:layout_width="174dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="             일반종이"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/cdbtn"
        android:background="@android:color/transparent"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/cd"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_margin="40dp"
        />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:text="              CD,DVD"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/penbtn"
        android:background="@android:color/transparent"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:src="@drawable/pen" />
    <TextView
        android:text="                필기구"
        android:layout_row="5"
        android:layout_column="0"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/magnetbtn"
        android:background="@android:color/transparent"
        android:layout_width="125dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:src="@drawable/magnet"
        />

    <TextView
        android:layout_width="125dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text="                자석"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/bookbtn"
        android:background="@android:color/transparent"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:src="@drawable/book2" />

    <TextView
        android:text="          책,노트,잡지"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/cutterbtn"
        android:background="@android:color/transparent"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:src="@drawable/cutter" />
    <TextView
        android:text="               커터칼"
        android:layout_row="5"
        android:layout_column="1"
        android:textSize="20dip" />
</GridLayout>