<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodFragment"
    android:background="#AFD485"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="2"
    >

    <ImageButton
        android:id="@+id/im_food2"
        android:layout_width="125dp"
        android:layout_height="105dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food2" />

    <TextView
        android:layout_width="174dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="           달걀껍질"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_food3"
        android:layout_width="112dp"
        android:layout_height="76dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="               장류"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_food4"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food4" />

    <TextView
        android:layout_row="5"
        android:layout_column="0"
        android:text="              동물 뼈"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_food5"
        android:layout_width="125dp"
        android:layout_height="99dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food5" />

    <TextView
        android:layout_width="125dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text="     견과류 껍질"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_food6"
        android:layout_width="125dp"
        android:layout_height="84dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food6" />

    <TextView
        android:layout_row="3"
        android:layout_column="1"
        android:text="           바나나 껍질"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_food7"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food7" />
    <TextView
        android:text="           약, 영양제"
        android:layout_row="5"
        android:layout_column="1"
        android:textSize="20dp" />
</GridLayout>