<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFD485"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="2"
    android:id="@+id/rock"
    tools:context=".ContainerActivity"
    >

    <ImageButton
        android:id="@+id/im_gotoContainer2"
        android:layout_width="125dp"
        android:layout_height="105dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/container2" />

    <TextView
        android:layout_width="174dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="          배달 플라스틱"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gotoContainer3"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/container3" />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:text="             가스용기"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gotoContainer4"
        android:layout_width="125dp"
        android:layout_height="96dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/container4" />
    <TextView
        android:text="           술, 음료병"
        android:layout_row="5"
        android:layout_column="0"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gotoContainer5"
        android:layout_width="125dp"
        android:layout_height="101dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/container5" />

    <TextView
        android:layout_width="125dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text="             우유팩"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gotoContainer6"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/container6" />

    <TextView
        android:text="              요거트 용기"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gotoContainer7"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/container7" />
    <TextView
        android:text="               박스"
        android:layout_row="5"
        android:layout_column="1"
        android:textSize="20dip" />
</GridLayout>