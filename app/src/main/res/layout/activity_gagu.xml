<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFD485"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="2">

    <ImageButton
        android:id="@+id/im_gagu2"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gagu2" />

    <TextView
        android:layout_width="174dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="               침대"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gagu3"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gagu3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="               이불"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gagu4"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gagu4" />

    <TextView
        android:layout_row="5"
        android:layout_column="0"
        android:text="                전구"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gagu5"
        android:layout_width="125dp"
        android:layout_height="82dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gagu5" />

    <TextView
        android:layout_width="125dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text="                의자"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gagu6"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gagu6" />

    <TextView
        android:layout_row="3"
        android:layout_column="1"
        android:text="                베개"
        android:textSize="20dip" />

    <ImageButton
        android:id="@+id/im_gagu7"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gagu7" />
    <TextView
        android:text="                소파"
        android:layout_row="5"
        android:layout_column="1"
        android:textSize="20dp" />
</GridLayout>